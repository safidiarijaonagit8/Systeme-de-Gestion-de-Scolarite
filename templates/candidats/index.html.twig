                          </br>
                   <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Moyenne bacc</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for candidat in candidats %}
            <tr>
                <td>{{ candidat.id }}</td>
                <td>{{ candidat.nom }}</td>
                <td>{{ candidat.prenom }}</td>
                <td>{{ candidat.datedenaissance ? candidat.datedenaissance|date('d-m-Y') : '' }}</td>
                <td>{{ candidat.moyennebacc }}</td>
                <td>
                    <a href="{{ path('app_candidats_show', {'id': candidat.id}) }}" class="btn btn-primary">Détails</a>
                    <a href="{{ path('app_candidats_edit', {'id': candidat.id}) }}" class="btn btn-success">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div style="text-align: center;">
