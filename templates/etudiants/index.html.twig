{% extends 'base.html.twig' %}

{% block title %}Liste des Etudiants {% endblock %}

{% block body %}
    
{{ include('sidebar.html.twig') }}
    <div class="wrapper d-flex flex-column min-vh-100 bg-light">
      <header class="header header-sticky mb-4">
        <div class="container-fluid">
          <button class="header-toggler px-md-0 me-md-3" type="button" onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
            <svg class="icon icon-lg">
              <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-menu"></use>
            </svg>
          </button><a class="header-brand d-md-none" href="#">
            <svg width="118" height="46" alt="CoreUI Logo">
              <use xlink:href="assets/brand/coreui.svg#full"></use>
            </svg></a>
        
        
        </div>
        <div class="header-divider"></div>
        <div class="container-fluid">
          <nav aria-label="breadcrumb">
           
          </nav>
        </div>
      </header>
      <div class="body flex-grow-1 px-3">
        <div class="container-lg">
          <div class="car"></div>
          
         
          <div class="card mb-4">
          
            <div class="card-body">
            
              <div class="example">
                <ul class="nav nav-tabs" role="tablist">
                  <li class="nav-item"><a class="nav-link active" data-coreui-toggle="tab" href="#preview-1002" role="tab">
                      <svg class="icon me-2">
                        <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-media-play"></use>
                      </svg>Liste Etudiants</a></li>
                 
                </ul>
                <div class="tab-content rounded-bottom">
                  <div class="tab-pane p-3 active preview" role="tabpanel" id="preview-1002">
                 
                          </br>
                   <table class="table table-striped">
        <thead>
            <tr>
                <th>Num Etu</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Moyenne bacc</th>
                <th></th>
                 <th></th>
                  <th></th>
            </tr>
        </thead>
        <tbody>
        {% for e in listeetudiants %}
            <tr>
                <td>{{ e.id }}</td>
                <td>{{ e.nom }}</td>
                <td>{{ e.prenom }}</td>
                <td>{{ e.datedenaissance ? e.datedenaissance|date('d-m-Y') : '' }}</td>
                <td>{{ e.moyennebacc }}</td>
                <td>
                    <a href="{{ path('app_traitement_saisiemoyennesemestre', {'idetudiant': e.id}) }}" class="btn btn-primary">Saisir moyenne</a>
                      </td>
                        <td>
                     <a href="{{ path('app_traitement_saisiepaiementsemestre', {'idetudiant': e.id}) }}" class="btn btn-success">Paiement</a>  </td>
                      <td>
                      <a href="{{ path('app_traitement_etudiantfiche', {'idetudiant': e.id}) }}" class="btn btn-dark">Fiche</a>
                      </td>
                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


                    
                  </div>
                </div>
              </div>
              </br>    </br>   
              <div style="text-align: center;">
         {{ knp_pagination_render(listeetudiants) }}
         </div>
        
    
    </div>
